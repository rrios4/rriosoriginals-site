---
import SectionHeader from "./section-header.astro";
import ProjectCard from "./project-card.astro";
import { ProjectInterface } from '../types/global-types'
type Props = {
  projectData: any;
};



const { projectData }: Props = Astro.props;
---

<div id="projects" class="py-4">
  <SectionHeader title="Projects" subtitle="A glance at my work" />
  <ul class="grid grid-flow-row grid-cols-1 lg:grid-cols-2 gap-6">
    {
      projectData.map((item: ProjectInterface, index: number) => (
        <li>
          <ProjectCard item={item}/>
        </li>
      ))
    }
  </ul>
</div>
