---
import React from "@astrojs/react";
import LucideIcon from "./ui/icons/lucide-icon.astro";
import { MoveUpRight } from "lucide";
import SectionHeader from "./section-header.astro";
type Props = {
  projectData: any;
};

type ProjectInterface = {
  title: string;
  subtitle: string;
  description: string;
  start_date: string;
  end_date: string;
  img_url: string;
  project_url: string;
  featured: boolean;
  badges: string[];
  color: string;
};

const { projectData }: Props = Astro.props;
---

<div class="container py-4">
  <SectionHeader title="Projects" subtitle="A glance at my work" />
  <div class="grid grid-flow-row grid-cols-1 lg:grid-cols-2 gap-6">
    {
      projectData.map((item: ProjectInterface, index: number) => (
        <>
          <div class={`w-full bg-slate-100 rounded-2xl h-[525px]`}>
            <div class="flex flex-col gap-8 transition ease-in-out duration-500 hover:scale-105 p-10 h-full hover:cursor-pointer">
              <div class="flex justify-between w-full">
                <div>
                  <p class="text-[18px] text-slate-800 font-[500]">
                    {item.title}
                  </p>
                  <p class="text-[14px] text-slate-500">{item.subtitle}</p>
                  <p class="text-[14px] mt-2 text-slate-700">
                    {item.start_date} - {item.end_date}
                  </p>
                </div>
                <div class="bg-white rounded-full w-[50px] h-[50px] flex flex-col justify-center">
                  <LucideIcon
                    icon={MoveUpRight}
                    class="mx-auto w-[20px] h-[20px]"
                  />
                </div>
              </div>
              <div class="flex gap-4">
                {item.badges.map((item, index) => (
                  <div class="bg-black rounded-full text-orange-50 text-xs py-2 px-4">
                    {item}
                  </div>
                ))}
              </div>
              <div class="mt-auto rounded-2xl overflow-hidden">
                <img
                  src={item.img_url}
                  class="w-[1000px] mt-auto rounded-2xl"
                />
              </div>
            </div>
          </div>
        </>
      ))
    }
  </div>
</div>
